= render 'top_filter'
= render 'main_filter'

%table.table.table-striped
  %thead
    %tr
      %th= sortable_header_for :name
      %th= sortable_header_for :tld
      %th Listed On
      %th= sortable_header_for :closing_on
      %th Domain Expires
      %th= sortable_header_for :price
      %th User
      %th Categories
  %tbody
    - @domains.each do |domain|
      %tr
        %td= external_link_to domain.name, domain.listing_url
        %td= domain.tld
        %td= date_tooltip_for domain.listed_on
        %td= date_closing_tooltip_for domain.closing_on
        %td= date_tooltip_for domain.expires_on
        %td= number_to_currency domain.price
        %td= external_link_to_user_for domain.remote_user
        %td= external_link_to_categories_for domain
